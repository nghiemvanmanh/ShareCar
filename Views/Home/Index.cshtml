@model ShareCar.Models.CarHomeModel;
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bootstrap Slider</title>

    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Đảm bảo carousel chiếm 70% chiều rộng màn hình */
        .carousel {
            width: 80%;
            /* Chiếm 70% chiều rộng */
            margin: 0 auto;
            /* Canh giữa */

        }

        /* Tùy chỉnh kích thước hình ảnh */
        .carousel-item img {

            width: 100%;
            /* Đảm bảo hình ảnh chiếm đầy đủ chiều rộng của container */
            height: 100%;
            object-fit: cover;
            opacity: 0;
            transition: opacity 0.5s ease-in-out;
        }

        .carousel-item.active img {
            opacity: 1;
        }
    </style>
</head>

<body>

    <div class="container mt-5">
        <!-- Carousel -->
        <div id="carouselExampleAutoplaying" class="carousel slide" data-ride="carousel" data-interval="3000" data-pause="false">
            <!-- Các slide -->
            <div class="carousel-inner" >
                <div class="carousel-item active">
                    <img src="/images/banner1.jpg" alt="Banner 1" class="d-block w-100" alt="Banner 1">
                </div>
                <div class="carousel-item">
                    <img src="/images/banner2.jpg" class="d-block w-100" alt="Banner 2">
                </div>
                <div class="carousel-item">
                    <img src="/images/banner3.jpg" class="d-block w-100" alt="Banner 3">
                </div>
            </div>

            <!-- Các dấu chấm điều hướng -->
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleAutoplaying" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleAutoplaying" data-slide-to="1"></li>
                <li data-target="#carouselExampleAutoplaying" data-slide-to="2"></li>
            </ol>
        </div>
    </div>
    <div class="container mt-5">
        <div id="CarShare">
            <!-- Gọi PartialView xe cho thuê -->
            @Html.Partial("CarShare", Model.CarShare)
        </div>
        <div id="CarSell">
            @Html.Partial("CarSell", Model.CarSell)
        </div>

    </div>
    <!-- jQuery (Required for Bootstrap) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
    <script>
        $(document).ready(function () {

            // Đảm bảo hình ảnh được hiển thị sau khi tải
            $('#carouselExampleAutoplaying').on('slide.bs.carousel', function (e) {
                var $currentSlide = $(e.relatedTarget);
                var $img = $currentSlide.find('img');

                $img.css('opacity', 0);

                $img.on('load', function () {
                    $img.css('opacity', 1);
                });
            });
        });
    </script>
</body>

</html>
