@model IEnumerable<ShareCar.Models.CarShareModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Danh dành cho bạn</title>

    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="text-center">
        <h1 class="display-4 fw-bold">Chào mừng đến với ShareCar</h1>
        <p class="lead">Trang web hỗ trợ chia sẻ phương tiện giao thông một cách tiện lợi và an toàn.</p>
        <a asp-controller="User" asp-action = "Login" class="btn btn-primary btn-lg mt-3">Bắt đầu ngay</a>
    </div>
    <h3>Xe dành cho bạn</h3>
    <div class="container mt-5">
        <div class="row">
            @foreach (var car in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card shadow-sm">
                        <img src="@car.Image" class="card-img-top" alt="@car.Model" style="height: 200px; object-fit: cover;">
                        
                        <div class="card-body">
                             <div class="d-flex justify-content-between mb-2">
                                 <h5 class="card-title mb-1">@car.Model</h5>

                                 <span class="text-warning">
                                    <i class="fas fa-star"></i> @car.AverageRating
                                </span>
                             </div>
                           
                            <p class="card-text text-muted">Biển số: @car.LicensePlate</p> 

                            <div class="d-flex justify-content-between mb-2">
                                <p class="card-text text-muted">
                                <i class="fas fa-clock"></i>
                                @{
                                    var timeDifference = DateTime.Now - car.Day;
                                    var timeText = "";

                                    if (timeDifference.TotalSeconds < 60)
                                    {
                                        timeText = $"{(int)timeDifference.TotalSeconds} giây trước";
                                    }
                                    else if (timeDifference.TotalMinutes < 60)
                                    {
                                        timeText = $"{(int)timeDifference.TotalMinutes} phút trước";
                                    }
                                    else if (timeDifference.TotalHours < 24)
                                    {
                                        timeText = $"{(int)timeDifference.TotalHours} giờ trước";
                                    }
                                    else
                                    {
                                        timeText = $"{(int)timeDifference.TotalDays} ngày trước";
                                    }
                                }
                                @timeText
                            </p>
                                <p class="card-text text-muted mb-0">
                                    <i class="fas fa-user"></i> @car.Poster
                                </p>
                                
                            </div>
                            <!-- Thời gian đăng bài -->
                            <div class="d-flex justify-content-between mb-2">
                                <div class="d-flex justify-content-between mb-2">
                                <!-- Nền ô chữ của Status -->
                                <span class="badge @(car.Status == "Đã cho thuê" ? "bg-danger text-light" : "bg-info text-dark")">
                                   @car.Status
                                </span>
                                </div>

                                 <p class="card-text text-muted"> <i class="fas fa-money-bill-wave"></i> @String.Format("{0:0,0}", car.RentalPrice) VNĐ</p>
                            </div>

                            <!-- Dòng chứa số sao và các nút căn ngang hàng -->
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <!-- Nút Xem Chi Tiết -->
                                    <a href="@Url.Action("CarDetail", "Car", new { id = car.CarID })" class="btn btn-primary btn-sm me-2"> 
                                        Xem Chi Tiết
                                    </a>
                                    
                                    <!-- Nút Đặt Xe -->
                                    <a href="@Url.Action("Login", "User", new { id = car.CarID })" class="btn btn-success btn-sm">
                                        Đặt Xe
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <!-- Include Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-CiKYZyz2C2g1qcN0bmfQ3v52Uta/cfZW+kLtbsEv56TVWb6hFHF6Q7iKd17h8/aJ" crossorigin="anonymous"></script>
</body>
</html>
