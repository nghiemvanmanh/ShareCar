@model ShareCar.Models.Home.CarModel.CarSellModel;
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thanh Toán</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            max-width: 1200px;
            margin: 30px auto;
        }

        .payment-method {
            border: 1px solid #e5e5e5;
            border-radius: 5px;
            padding: 15px;
            margin-bottom: 20px;
            background-color: #fff;
        }

        .payment-method:hover {
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .order-summary {
            background-color: #fff;
            padding: 20px;
            border: 1px solid #e5e5e5;
            border-radius: 5px;
        }

        .order-summary h5 {
            margin-bottom: 15px;
        }

        .total-price {
            font-size: 18px;
            font-weight: bold;
        }

        .btn-pay {
            background-color: #0077f5;
            color: #fff;
        }

        .btn-pay:hover {
            background-color: #005bb5;
        }

        .col-6 p {
            font-size: 13px;
                height: 10px;
        }
        .info p{
            display: flex;
            place-content: space-between;
        }
        button.btn.btn-pay.w-100.mt-3 {
            background: black;
            transition: color 0.3s ease, transform 0.3s ease;
        }
        button.btn.btn-pay.w-100.mt-3:hover{
            transform : scale(1.1);
            color:white
        }
    </style>
</head>

<body>
    <div class="container">
        <h2 class="mb-4">Checkout</h2>
        <div class="row">
            <!-- Payment Methods -->
            <div class="col-md-8">
                <div class="payment-method">
                    <h5>Thanh toán trực tiếp</h5>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="paymentOption" id="rewardOption">
                        <label class="form-check-label" for="rewardOption">
                            Thanh toán giao dịch khi nhận xe
                        </label>
                    </div>
                </div>
                <div class="payment-method">
                    <h5>Phương thức Thanh toán khác</h5>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="paymentOption" id="creditCardOption">
                        <label class="form-check-label" for="creditCardOption">
                            Tài khoản ngân hàng
                        </label>
                    </div>
                    <div class="form-check mt-3">
                        <input class="form-check-input" type="radio" name="paymentOption" id="paypalOption">
                        <label class="form-check-label" for="paypalOption">
                            <img src="https://www.paypalobjects.com/images/shared/paypal-logo-129x32.svg" alt="PayPal">
                        </label>
                    </div>
                </div>
            </div>
            <!-- Order Summary -->
            <div class="col-md-4">
                <div class="order-summary">
                    <h5>Tóm tắt đơn hàng</h5>
                    <div class="order-info col-12">
                        <div class="row">
                            <div class="col-6">
                                <img src="@Model.Image" style="width: 100%;">
                            </div>
                            <div class="col-6">
                                <p>@Model.Brand @Model.Model</p>
                                <p class="text-muted">@Model.LicensePlate</p>
                                <p class="text-muted">@(Model.SellPrice)đ</p>
                            </div>
                        </div>
                    </div>
                    <div class="info">
                        <p class="text-muted"><strong>Giá: </strong> @(Model.SellPrice)đ</p>
                        <p class="text-muted"><strong>Thuế: </strong> @(Model.SellPrice * 0.05)đ</p>
                        <hr>
                        <p><strong>Total:</strong> <span class="text-dark">@(Model.SellPrice * 1.05)đ</span></p>
                    </div>

                    <button class="btn btn-pay w-100 mt-3">Thanh toán</button>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
