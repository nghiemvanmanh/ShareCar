@model IEnumerable<ShareCar.Models.Home.CarModel.CarShareModel>
<!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Xe dành cho bạn</title>

        <!-- Include Bootstrap CSS -->
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    </head>
    <style>
        .card-img-top{
        object-fit: cover;
            height: 200px; /* Giảm kích thước ảnh */
    }
    .col-md-3.mb-4 {
        width: 32%;
    }
    a.btn.btn-primary.btn-sm.me-2 {
        background: linear-gradient(45deg, #ffffff, #454444);
        border: none;
        color: #000000;
        transition: color 0.3s ease, transform 0.3s ease;
    }

    a.btn.btn-success.btn-sm {
        background: linear-gradient(43deg, #94ccff, #b0adad);
        border: none;
        color: black;
        transition: color 0.3s ease, transform 0.3s ease;
    }

    a.btn.btn-success.btn-sm:hover {
        transform: scale(1.1);
    }

    a.btn.btn-primary.btn-sm.me-2:hover {
        transform: scale(1.1);
    }
    .d-flex.align-items-center.justify-content-lg-start {
    margin-top: 20px;
    }

    .text-content {
        color: #a8b0b7;
    }

    span.badge.bg-checkout.text-light {
        background: linear-gradient(45deg, #e0636f, #130706);
    }

    span.badge.bg-check.text-dark {
        background: linear-gradient(45deg, #f8f9fa, #8fd5e4);
    }

    .card.shadow-sm {
        background: #101014;
    }
    
    </style>
    <body>
        <div>
            <a href="javascript:history.back()"><i class="bi bi-arrow-left-short" style="color: black; font-size: 40px; margin-left: 10px;"></i></a>
        </div>
        <h3 class="container mt-5">Xe cho thuê hiện có (@Model.Count() bài đăng)</h3>
        <div class="container mt-5">
        <div class="row" style="width: 115%;">
            @if(Model!=null && Model.Any()){
                @foreach (var car in Model)
                {
                    <div class="col-md-3 mb-4">
                        <div class="card shadow-sm">
                            <img src="@car.Image" class="card-img-top" alt="@car.Model">
                            <div class="card-body">
                                <div class="d-flex justify-content-between mb-2">
                                    <h5 class="card-title mb-1">@car.Brand @car.Model</h5>
                                </div>
                                <p class="card-text text-content">Biển số: @car.LicensePlate</p>

                                <div class="d-flex justify-content-between mb-2">
                                    <p class="card-text text-content">
                                        <i class="fas fa-clock"></i>
                                        @{
                                            var timeDifference = DateTime.Now - car.Day;
                                            var timeText = "";

                                            if (timeDifference.TotalSeconds < 60)
                                            {
                                                timeText = $"{(int)timeDifference.TotalSeconds} giây trước";
                                            }
                                            else if (timeDifference.TotalMinutes < 60)
                                            {
                                                timeText = $"{(int)timeDifference.TotalMinutes} phút trước";
                                            }
                                            else if (timeDifference.TotalHours < 24)
                                            {
                                                timeText = $"{(int)timeDifference.TotalHours} giờ trước";
                                            }
                                            else
                                            {
                                                timeText = $"{(int)timeDifference.TotalDays} ngày trước";
                                            }
                                        }
                                        @timeText
                                    </p>
                                    <p class="card-text text-content mb-0">
                                        <i class="fas fa-user"></i> @car.Poster
                                    </p>
                                </div>

                                <div class="d-flex justify-content-between mb-2">
                                    <p class="card-text text-content mb-0"><strong><i class="fas fa-cogs"></i></strong>
                                    <span
                                        class="badge @(car.Status == "Đã cho thuê" ? "bg-checkout text-light" : "bg-check text-dark")"
                                        style=" font-weight:normal;">
                                        @car.Status
                                    </span>
                                    <p class="card-text text-content"> 
                                        <i class="fas fa-money-bill-wave"></i> @String.Format("{0:0,0}", car.RentalPrice) đ
                                    </p>
                                </div>

                                <div class="d-flex align-items-center justify-content-lg-start">
                                    <a href="@Url.Action("CarShareDetail", "Car", new { id = car.CarID })" class="btn btn-primary btn-sm me-2"> 
                                        Xem Chi Tiết
                                    </a>
                                    <a href="@Url.Action("CarShareOrder", "Car", new { id = car.CarID })" class="btn btn-success btn-sm">
                                        Đặt Xe
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }else{
                <h5><p class="text-center">Không tìm thấy phương tiện nào...</p></h5>
            }
            
        </div>
    </div>

</body>
</html>




