@model ShareCar.Models.CarHomeModel
<h3>Kết quả tìm kiếm phương tiện</h3>

@if(Context.Session.GetString("Option") == "Mua xe" || Context.Session.GetString("Option") == "Tất cả"){
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Xe dành cho bạn</title>

        <!-- Include Bootstrap CSS -->
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    </head>
    <body>
        <div class="container mt-5">
            <div>
                @Html.Partial("CarSell",Model.CarSell)
            </div>
        </div>

    </body>
    </html>
}
@if(Context.Session.GetString("Option") == "Thuê xe" || Context.Session.GetString("Option") == "Tất cả"){
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Xe dành cho bạn</title>

        <!-- Include Bootstrap CSS -->
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    </head>
    <body>
        <div class="container mt-5">
            <div>
                <!-- Gọi PartialView xe cho thuê -->
                @Html.Partial("CarShare",Model.CarShare)
            </div>
        </div>

    </body>
    </html>
}

