@{
    Layout = null; // Đặt thành null nếu bạn muốn sử dụng layout này làm trang độc lập
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"> <!-- Đường dẫn đến Bootstrap -->
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css"> <!-- Đường dẫn đến Font Awesome nếu cần -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <title>@ViewData["Title"] - ShareCar</title>

    <style>
        /* Các kiểu tùy chỉnh của bạn */
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .navbar {
            border-bottom: 1px solid #e0e0e0; /* Đường viền dưới */
        }

        .nav-link {
            padding: 10px 15px; /* Điều chỉnh khoảng cách padding */
            transition: background-color 0.3s; /* Hiệu ứng chuyển đổi */
        }

        .nav-link:hover {
            background-color: rgba(0, 123, 255, 0.1); /* Nền khi hover */
            border-radius: 5px; /* Bo góc */
        }

        .dropdown-menu {
            border-radius: 0.5rem; /* Bo góc cho menu dropdown */
        }

        .form-search {
            border: none;
            border-radius: 30px;
            padding: 8px 12px 8px 40px;
            font-size: 16px;
            width: 200%;
            background-color: #e9ecef;
        }

        .btn-outline-success {
            margin-left: 5px; /* Khoảng cách giữa nút tìm kiếm */
        }

        .btn {
            transition: background-color 0.3s, color 0.3s; /* Hiệu ứng chuyển đổi cho nút */
        }

        .btn:hover {
            background-color: #007bff; /* Màu nền khi hover */
            color: white; /* Màu chữ khi hover */
        }

        .navbar-nav {
            gap: 15px; /* Thêm khoảng cách giữa các nút */
        }

        .nav-link {
            padding: 8px 12px; /* Padding cho các nút */
        }

        .nav-link:hover {
            background-color: rgba(0, 123, 255, 0.1); /* Màu nền khi hover */
            border-radius: 5px; /* Bo tròn các góc của nút khi hover */
        }

        .footer {
            background-color: #ffffff;
            border-top: 1px solid #dee2e6;
        }
        .footer h5 {
            font-weight: bold;
        }



    </style>
</head>
<body>
    <!-- Offcanvas Sidebar -->
    <div class="offcanvas offcanvas-start" tabindex="-1" id="sidebar" aria-labelledby="sidebarLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="sidebarLabel">Menu</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="list-group">
                <li class="list-group-item">
                    <a href="/" class="text-decoration-none">
                        <i class="bi bi-house-door me-2"></i>Trang Chủ
                    </a>
                </li>
                <li class="list-group-item">
                    <a href="#" class="text-decoration-none">
                        <i class="bi bi-check-square me-2"></i>Bài Duyệt
                    </a>
                </li>
                <li class="list-group-item">
                    <a asp-controller ="Car" asp-action="CarManager" class="text-decoration-none">
                        <i class="bi bi-car-front me-2"></i>Quản lý Phương tiện
                    </a>
                </li>
                <li class="list-group-item">
                    <a asp-controller ="User" asp-action="UserManager" class="text-decoration-none">
                        <i class="bi bi-person me-2"></i>Quản lý Người dùng
                    </a>
                </li>
            </ul>
        </div>
    </div>

   <!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
    <div class="container">
        @if (Context.Session.GetString("UserName") == "admin"){
        <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebar" aria-controls="sidebar">
            <i class="bi bi-list"></i>
        </button>
        }
        @if (Context.Session.GetString("UserName") == null){
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                <i class="bi bi-car-front me-1" style="font-size: 1.5rem;"></i>ShareCar
            </a>
        }else{
            <a class="navbar-brand fw-bold" asp-controller="Car" asp-action="Index">
                <i class="bi bi-car-front me-1" style="font-size: 1.5rem;"></i>ShareCar
            </a>
        }
        
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Danh mục
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="#">Xe Máy</a></li>
                        <li><a class="dropdown-item" href="#">Ô Tô</a></li>
                        <li><a class="dropdown-item" href="#">Xe Đạp</a></li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Car" asp-action="NewCar">
                        <i class="bi bi-plus-circle me-1"></i>Bài Đăng Mới
                    </a>
                </li>
            </ul>
            <form class="d-flex me-3" method="get" asp-controller="Car" asp-action="CarSearch" role="search">
                <input class="form-control me-2" name="query" type="search" placeholder="Tìm kiếm..." aria-label="Tìm kiếm">
                <button class="btn btn-outline-primary me-2" type="button" id="filterToggle">
                    <i class="fas fa-filter"></i> <!-- Biểu tượng bộ lọc -->
                </button>
                <div id="filterOptions" style="display: none; margin-left: 10px;">
                    <select name="Status" class="form-select form-select-sm me-2" style="width: auto;">
                        <option value="Tất cả trạng thái">Tất cả trạng thái</option>
                        <option value="Chưa cho thuê">Chưa cho thuê</option>
                        <option value="Đã cho thuê">Đã cho thuê</option>
                    </select>
                    <select name="Days" class="form-select form-select-sm me-2" style="width: auto;">
                        <option value="Tất cả thời gian">Tất cả thời gian</option>
                        <option value="Hôm nay">Hôm nay</option>
                        <option value="1 ngày trước">1 ngày trước</option>
                        <option value="3 ngày trước">3 ngày trước</option>
                        <option value="7 ngày trước">7 ngày trước</option>
                        <option value="1 tháng trước">1 tháng trước</option>
                        <option value="1 năm trước">1 năm trước</option>
                    </select>
                </div>
                <button class="btn btn-outline-success" type="submit">Tìm</button>
            </form>
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0 d-flex align-items-center">
                @if (Context.Session.GetString("UserName") != null) // Kiểm tra nếu người dùng đã đăng nhập
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="User" asp-action="Profile">
                            Xin chào, @Context.Session.GetString("UserName")
                        </a> <!-- Hiển thị tên người dùng -->
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="User" asp-action="Logout">
                            <i class="bi bi-box-arrow-right me-1"></i>Đăng xuất
                        </a> <!-- Nút đăng xuất -->
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center" asp-controller="User" asp-action="Login">
                            <i class="fas fa-sign-in-alt text-success me-1"></i>Đăng nhập
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link d-flex align-items-center" asp-controller="User" asp-action="Register">
                            <i class="fas fa-user-plus text-primary me-1"></i>Đăng ký
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="bg-light text-dark pt-5 pb-4">
    <div class="container text-md-left">
        <div class="row">
            <!-- Thông tin về ShareCar -->
            <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3">
                <h5 class="text-uppercase mb-4 font-weight-bold">ShareCar</h5>
                <p>ShareCar là nền tảng chia sẻ phương tiện giao thông tiện lợi và an toàn</p>
            </div>

            <!-- Thông tin liên hệ -->
            <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mt-3">
                <h5 class="text-uppercase mb-4 font-weight-bold">Thông tin liên hệ</h5>
                <p><i class="bi bi-geo-alt-fill me-2"></i>Địa chỉ: Số 96 Định Công, Hà Nội</p>
                <p><i class="bi bi-envelope-fill me-2"></i>Email contact: nvmanhfc03@gmail.com</p>
                <p><i class="bi bi-phone-fill me-2"></i>Liên hệ: +84 332 536 581</p>
            </div>

            <!-- Chính sách -->
            <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mt-3">
                <h5 class="text-uppercase mb-4 font-weight-bold">Chính sách</h5>
                <p><a href="#" class="text-dark text-decoration-none">Chính sách bảo mật</a></p>
                <p><a href="#" class="text-dark text-decoration-none">Điều khoản sử dụng</a></p>
                <p><a href="#" class="text-dark text-decoration-none">Chính sách hoàn trả</a></p>
            </div>

            <!-- Mạng xã hội -->
            <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mt-3">
                <h5 class="text-uppercase mb-4 font-weight-bold">Theo dõi chúng tôi</h5>
                <a href="#" class="text-dark me-4"><i class="bi bi-facebook"></i></a>
                <a href="#" class="text-dark me-4"><i class="bi bi-twitter"></i></a>
                <a href="#" class="text-dark me-4"><i class="bi bi-instagram"></i></a>
                <a href="#" class="text-dark"><i class="bi bi-linkedin"></i></a>
            </div>
        </div>

        <!-- Dòng copyright -->
        <div class="row mt-4">
            <div class="col-md-12 text-center">
                <p class="text-muted">© 2024 ShareCar. All rights reserved.</p>
            </div>
        </div>
    </div>
</footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    // Tạo chức năng cho nút bộ lọc
        document.getElementById('filterToggle').addEventListener('click', function () {
            var filterOptions = document.getElementById('filterOptions');
            filterOptions.style.display = (filterOptions.style.display === 'none' || filterOptions.style.display === '') ? 'flex' : 'none';
        });
    </script>
</body>
</html>
