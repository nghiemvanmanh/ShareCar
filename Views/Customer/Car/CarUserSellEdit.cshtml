@model ShareCar.Models.Home.CarModel.CarSellModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sửa Thông Tin Phương Tiện</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <style>
        .form-label{
            color:black !important;
        }
        .btn-primary {
            background: linear-gradient(43deg, #94ccff, #b0adad);
            border: none;
            transition: color 0.3s ease, transform 0.3s ease;
        }

        .btn-primary:hover {
            transform: scale(1.1);
        }

        .btn-secondary {
            background: linear-gradient(45deg, #ffffff, #454444);
            border: none;
            transition: color 0.3s ease, transform 0.3s ease;
        }

        .btn-secondary:hover {
            transform: scale(1.1);
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center my-4">Sửa Thông Tin Phương Tiện</h2>
            <div class="row justify-content-center">
                <div class="col-md-6">

                    <form asp-action="CarUserSellEdit" method="post" class="border p-4 shadow rounded bg-light">
                         <input type="hidden" asp-for="CarID" /> <!-- Nếu có thuộc tính Id trong model -->
                         <div class="mb-3">
                            <label asp-for="UserID" class="form-label">ID</label>
                            <input asp-for="UserID" class="form-control" />
                            <span asp-validation-for="UserID" class="text-danger"></span>
                        </div>
                        <div class="mb-3" >
                            <label asp-for="Poster" class="form-label">Người Đăng</label>
                            <input asp-for="Poster" class="form-control" />
                            <span asp-validation-for="Poster" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="LicensePlate" class="form-label">Biển số</label>
                            <input asp-for="LicensePlate" class="form-control" />
                            <span asp-validation-for="LicensePlate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Brand" class="form-label">Hãng xe</label>
                            <input asp-for="Brand" class="form-control" />
                            <span asp-validation-for="Brand" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Model" class="form-label">Tên xe</label>
                            <input asp-for="Model" class="form-control" />
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Color" class="form-label">Màu sắc</label>
                            <input asp-for="Color" class="form-control" />
                            <span asp-validation-for="Color" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="VehicleRegistration" class="form-label">Giấy tờ</label>
                            <select asp-for="VehicleRegistration" class="form-select">
                                <option value="Đầy đủ">Đầy đủ</option>
                                <option value="Không đầy đủ">Không đầy đủ</option>
                            </select>
                            <span asp-validation-for="VehicleRegistration" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Mô tả</label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Day" class="form-label">Ngày đăng</label>
                            <input asp-for="Day" class="form-control" type="date" />
                            <span asp-validation-for="Day" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label">Địa chỉ</label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SDT" class="form-label">Liên hệ</label>
                            <input asp-for="SDT" class="form-control" />
                            <span asp-validation-for="SDT" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SellPrice" class="form-label">Giá bán</label>
                            <input asp-for="SellPrice" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="SellPrice" class="text-danger"></span>
                        </div>
                        <div class="mb-3" hidden="true">
                            <label asp-for="Image" class="form-label">Ảnh</label>
                            <input asp-for="Image" class="form-control" type="text" />
                        </div>
                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                        <a asp-action="CarManager" class="btn btn-secondary">Hủy</a>
                    </form>
                </div>
            </div>
    </div>
</body>


