@model ShareCar.Models.Customer.UserModel.AccountModel;

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Đăng Ký</title>

    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"> <!-- Đường dẫn đến Bootstrap -->
</head>
<style>
    button.btn.btn-primary.w-100 {
        background: linear-gradient(45deg, #ffffff, #454444);
        border: none;
        transition: color 0.3s ease, transform 0.3s ease;
    }

    button.btn.btn-primary.w-100:hover {
        transform: scale(1.1);
    }

    a {
        color: #bebebe;
    }

    a:hover {
        color: rgb(255, 255, 255);
    }

    .border {
        border: 1px solid #313335 !important;
    }
</style>

<body>
    <div class="container mt-5">
        <h2 class="text-center my-4">Đăng Ký</h2>



        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-action="Register" method="post" class="border p-4 ">
                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label">Tên người dùng</label>
                        <input asp-for="UserName" class="form-control" required />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="PassWord" class="form-label">Mật khẩu</label>
                        <input type="password" asp-for="PassWord" class="form-control" required />
                        <span asp-validation-for="PassWord" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="SDT" class="form-label">Số điện thoại</label>
                        <input asp-for="SDT" class="form-control" required />
                        <span asp-validation-for="SDT" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label">Họ và tên</label>
                        <input asp-for="FullName" class="form-control" required />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Address" class="form-label">Địa chỉ</label>
                        <input asp-for="Address" class="form-control" required />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="VerifyKey" class="form-label">Verify Key</label>
                        <input asp-for="VerifyKey" class="form-control" required />
                        <span asp-validation-for="VerifyKey" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Đăng Ký</button>
                </form>
                <div class="text-center mt-3">
                    <a href="@Url.Action("Login", "User")">Đã có tài khoản? Đăng nhập</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Include Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-CiKYZyz2C2g1qcN0bmfQ3v52Uta/cfZW+kLtbsEv56TVWb6hFHF6Q7iKd17h8/aJ"
        crossorigin="anonymous"></script>
</body>

</html>
